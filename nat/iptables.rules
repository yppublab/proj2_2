*nat
:PREROUTING ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

# DNAT внешний->fw: весь трафик, пришедший на IP прокси на uplink
-A PREROUTING ! -s 192.168.90.2 -j DNAT --to-destination 192.168.90.2

# все пакеты адресованные на fw задаем source ip на наш NAT
-A POSTROUTING -o eth0 -d 192.168.90.2 -j SNAT --to-source 192.168.90.254
-A POSTROUTING -o eth1 -d 192.168.90.2 -j SNAT --to-source 192.168.90.254

COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

# Разрешаем возвратные
-A FORWARD -m conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
-A FORWARD -i eth0 -o eth1 -j ACCEPT
-A FORWARD -i eth1 -o eth0 -j ACCEPT

COMMIT
